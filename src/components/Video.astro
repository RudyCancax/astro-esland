---
const src = "/video.mp4";
---

<div class="w-full relative">
  <img class="absolute z-10 left-0 right-0" src="/logo-home.svg" />
  <video
    style="clip-path: polygon(100% 0, 100% 79%, 50% 100%, 0 78%, 0 0);"
    class="w-full h-auto"
    autoplay
    loop
    muted
    {src}
  >
  </video>
  <video
    class="w-full h-auto absolute -bottom-48 blur-3xl -z-40"
    autoplay
    loop
    muted
    {src}
  >
  </video>
</div>
